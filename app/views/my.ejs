<link href="/public/css/vis.min.css" rel="stylesheet" type="text/css">
<div class="table-container">
  <h3 class="title text-right">
    <a id="btn-graph" data-user="<%= user.username %>" class="btn btn-link tooltip" data-tooltip="Graph friends">
      <i class="fa fa-2x fa-code-fork"></i>
    </a>
    <a id="btn-list" class="btn btn-link hide tooltip" data-tooltip="List friends">
      <i class="fa fa-2x fa-list"></i>
    </a>
    My friends
  </h3>
  <table id="table" class="table table-striped table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Member since</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% friends.forEach(function(friend) { %>
      <tr>
        <td>
          <figure class="avatar">
            <img src="<%= '//api.adorable.io/avatar/100/' + friend.username %>" />
          </figure>
        </td>
        <td><%= friend.name %></td>
        <td><%= fromNow(friend.date) %></td>
        <td><a id="<%= friend.username %>" class="btn btn-link btn-view tooltip" data-tooltip="View friends"><i class="fa fa-users"></i></a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<div id="nodes" class="hide"></div>
<script src="/public/js/vis.min.js"></script>
<script src="/public/js/my.js"></script>
